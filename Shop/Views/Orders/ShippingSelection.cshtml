@model IEnumerable<Database.Shipping>
@{
    ViewData["Title"] = "Способ доставки";
}
<h2>Выберите способ доставки</h2>
<div align="center">
    <table>
        <tr>
            <th>Название</th>
            <th>Компания</th>
            <th>Цена</th>
            <th>Описание</th>
            <th></th>
        </tr>
        @foreach (var shipping in Model)
        {
            <tr>
                <td>@shipping.Name</td>
                <td>@shipping.Company</td>
                <td>@shipping.Price</td>
                <td>@Html.Label("", shipping.Description, new { align = "Justify" })</td>
                <td>
                    <form method="post" asp-action="Index">
                        <input type="hidden" name="shippingId" value="@shipping.Id"/>
                        <input type="submit" value="Выбрать"/>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
